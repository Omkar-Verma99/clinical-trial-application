rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the doctor document
    function isOwner(doctorId) {
      return isAuthenticated() && request.auth.uid == doctorId;
    }
    
    // Doctors collection - FIXED: verify uid match
    match /doctors/{doctorId} {
      allow read: if isOwner(doctorId);
      allow create: if isAuthenticated() && request.auth.uid == doctorId;
      allow update: if isOwner(doctorId) && 
        (request.resource.data.uid == null || request.resource.data.uid == request.auth.uid);
      allow delete: if isOwner(doctorId);
      
      // Nested patients collection
      match /patients/{patientId} {
        allow read, create: if isOwner(doctorId);
        allow update, delete: if isOwner(doctorId);
        
        // Nested assessments collection
        match /assessments/{assessmentId} {
          allow read, write: if isOwner(doctorId);
        }
      }
    }
    
    // Top-level patients collection (for backward compatibility)
    // FIXED: Verify patient belongs to authenticated doctor
    match /patients/{patientId} {
      allow read: if isAuthenticated() && 
        resource.data.doctorId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.doctorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.doctorId == request.auth.uid;
    }
    
    // Top-level baseline data collection
    // FIXED: Verify ownership through patientId reference
    match /baselineData/{dataId} {
      allow read: if isAuthenticated() && 
        exists(/databases/$(database)/documents/patients/$(resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(resource.data.patientId)).data.doctorId == request.auth.uid;
      allow create, update: if isAuthenticated() &&
        exists(/databases/$(database)/documents/patients/$(request.resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(request.resource.data.patientId)).data.doctorId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        exists(/databases/$(database)/documents/patients/$(resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(resource.data.patientId)).data.doctorId == request.auth.uid;
    }
    
    // Top-level follow-up data collection
    // FIXED: Verify ownership through patientId reference
    match /followUpData/{dataId} {
      allow read: if isAuthenticated() && 
        exists(/databases/$(database)/documents/patients/$(resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(resource.data.patientId)).data.doctorId == request.auth.uid;
      allow create, update: if isAuthenticated() &&
        exists(/databases/$(database)/documents/patients/$(request.resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(request.resource.data.patientId)).data.doctorId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        exists(/databases/$(database)/documents/patients/$(resource.data.patientId)) &&
        get(/databases/$(database)/documents/patients/$(resource.data.patientId)).data.doctorId == request.auth.uid;
    }
  }
}
